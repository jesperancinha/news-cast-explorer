{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": [
    "jesperancinha/news-cast-explorer"
  ],
  "platform": "bitbucket",
  "extends": [
    "docker:disable"
  ],
  "username": "jesperancinha",
  "updateLockFiles": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "commons-io:commons-io"
      ],
      "allowedVersions": "!/20030203.000550$/",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "Angular Group",
      "matchPackagePrefixes": [
        "@angular/"
      ],
      "automerge": true
    },
    {
      "groupName": "Spring Boot Group",
      "matchPackagePrefixes": [
        "org.springframework.boot"
      ],
      "automerge": true
    },
    {
      "groupName": "Spring Group",
      "matchPackagePrefixes": [
        "org.springframework"
      ],
      "automerge": true
    },
    {
      "groupName": "Micrometer Group",
      "matchPackagePrefixes": [
        "io.micrometer"
      ],
      "automerge": true
    },
    {
      "groupName": "Test Containers Group",
      "matchPackagePrefixes": [
        "org.testcontainers"
      ],
      "automerge": true
    },
    {
      "groupName": "Eventuate Group",
      "matchPackagePrefixes": [
        "io.eventuate"
      ],
      "automerge": true
    },
    {
      "groupName": "Apache Maven Group",
      "matchPackagePrefixes": [
        "org.apache.maven"
      ],
      "automerge": true
    }
  ]
}
